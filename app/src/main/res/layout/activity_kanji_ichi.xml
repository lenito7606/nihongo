<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ichikanji"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:paddingLeft="20dp"
            android:id="@+id/onreading"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ON Reading"
            android:textSize="20sp"
            android:layout_marginBottom="154dp"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:paddingLeft="20sp"
            android:id="@+id/onread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="イチ,イツ"
            android:layout_alignBaseline="@+id/onreading"
            android:layout_alignBottom="@+id/onreading"
            android:layout_toEndOf="@+id/onreading" />

        <TextView
            android:id="@+id/kunreading"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kun Reading"
            android:textColor="@color/red"
            android:paddingLeft="20sp"
            android:layout_below="@+id/onread"
            android:layout_alignParentStart="true" />

        <TextView
            android:textSize="20sp"
            android:id="@+id/kunread0"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ひと(つ),ひと"
            android:layout_alignBaseline="@+id/kunreading"
            android:layout_alignBottom="@+id/kunreading"
            android:layout_toEndOf="@+id/kunreading" />

</RelativeLayout>
