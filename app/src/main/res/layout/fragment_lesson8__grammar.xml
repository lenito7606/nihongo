<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <me.biubiubiu.justifytext.library.JustifyTextView
            android:id="@+id/lesson8part1"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lesson8_a" />
        <me.biubiubiu.justifytext.library.JustifyTextView
            android:textSize="20sp"
            android:id="@+id/lesson8part2"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/lesson8part1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i adjective" />
        <me.biubiubiu.justifytext.library.JustifyTextView
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:id="@+id/lesson8part3"
            android:layout_below="@+id/lesson8part2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="あたらしい　です　present/future tense" />
        <me.biubiubiu.justifytext.library.JustifyTextView
            android:textSize="20sp"
            android:id="@+id/lesson8part4"
            android:layout_below="@+id/lesson8part3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="あたらしかった　です past tense" />
        <me.biubiubiu.justifytext.library.JustifyTextView
            android:textSize="20sp"
            android:id="@+id/lesson8part5"
            android:layout_below="@+id/lesson8part4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="あたらしくない　ですpresent negative" />
        <me.biubiubiu.justifytext.library.JustifyTextView
            android:textSize="20sp"
            android:id="@+id/lesson8part6"
            android:layout_below="@+id/lesson8part5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="あたらしくなかった　ですpast negative" />
        <me.biubiubiu.justifytext.library.JustifyTextView
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:id="@+id/lesson8part7"
            android:layout_below="@+id/lesson8part6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="na adjective" />
        <me.biubiubiu.justifytext.library.JustifyTextView
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:id="@+id/lesson8part8"
            android:layout_below="@+id/lesson8part7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="きれい　です present tense/future tense"  />
        <me.biubiubiu.justifytext.library.JustifyTextView
            android:textSize="20sp"
            android:id="@+id/lesson8part9"
            android:layout_below="@+id/lesson8part8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="きれい　でした past tense" />
        <me.biubiubiu.justifytext.library.JustifyTextView
            android:textSize="20sp"
            android:id="@+id/lesson8part10"
            android:layout_below="@+id/lesson8part9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="きれい　じゃありません present negative" />
        <me.biubiubiu.justifytext.library.JustifyTextView
            android:textSize="20sp"
            android:id="@+id/lesson8part11"
            android:layout_below="@+id/lesson8part10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="きれい　じゃありませんでした past negative" />
        <me.biubiubiu.justifytext.library.JustifyTextView
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:id="@+id/lesson8part12"
            android:layout_below="@+id/lesson8part11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lesson8_b" />

        <me.biubiubiu.justifytext.library.JustifyTextView
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:id="@+id/lesson8part13"
            android:layout_below="@+id/lesson8part12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lesson8_c" />
        <me.biubiubiu.justifytext.library.JustifyTextView
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:id="@+id/lesson8part14"
            android:layout_below="@+id/lesson8part13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="どんな　ひと　です か。" />
        <me.biubiubiu.justifytext.library.JustifyTextView
            android:textSize="20sp"
            android:id="@+id/lesson8part15"
            android:layout_below="@+id/lesson8part14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="どう　です　か。" />
        <me.biubiubiu.justifytext.library.JustifyTextView
            android:textSize="20sp"
            android:id="@+id/lesson8part16"
            android:layout_below="@+id/lesson8part15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="どれ　です　か。" />
        <me.biubiubiu.justifytext.library.JustifyTextView
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:id="@+id/lesson8part17"
            android:layout_below="@+id/lesson8part16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lesson8_d" />


    </RelativeLayout>
</ScrollView>