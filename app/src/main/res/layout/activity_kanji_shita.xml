<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shitakanji"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:paddingLeft="20dp"
        android:id="@+id/onreading"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON Reading"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="254dp" />

    <TextView
        android:id="@+id/onread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/onreading"
        android:layout_marginTop="28dp"
        android:paddingLeft="20sp"
        android:text="カ,ゲ"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/kunreading"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kun Reading"
        android:textColor="@color/red"
        android:paddingLeft="20sp"
        android:layout_below="@+id/onread"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/kunread0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView12"
        android:paddingLeft="14dp"
        android:text="お(りる),くだ(る)"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView11"
        android:paddingLeft="14dp"
        android:text="くだ(す),さ(がる)"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:paddingLeft="14dp"
        android:text="さ(げる),お(ろす)"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/kunreading"
        android:paddingLeft="14dp"
        android:text="した,しも"
        android:textSize="20sp" />

</RelativeLayout>
